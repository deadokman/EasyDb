<mah:MetroWindow x:Class="EasyDb.View.DatasourceSettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:items="clr-namespace:EasyDb.ViewModel.DataSource.Items"
        xmlns:customControls="clr-namespace:EasyDb.CustomControls"
        mc:Ignorable="d"
        Title="{StaticResource dsms_settingsWindowTitle}" Height="450" Width="800" ShowMinButton="False" ShowMaxRestoreButton="False" ShowIconOnTitleBar="False">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" d:DataContext="{d:DesignInstance items:UserDataSource}">
        <Grid.Resources>
            <ResourceDictionary>
                <Style TargetType="MenuItem"
                       BasedOn="{StaticResource StandardMenuItem}" />
                <Style TargetType="Menu"
                       BasedOn="{StaticResource StandardMenu}" />
            </ResourceDictionary>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".25*"/>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0">
            </DockPanel>
            <ListBox Grid.Row="1"></ListBox>
        </Grid>
        <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="{DynamicResource ControlBorderBrush}"></GridSplitter>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="65"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Margin="5">
                <DockPanel Margin="0,0,0,4" LastChildFill="True">
                    <TextBlock MinWidth="100" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{StaticResource dsms_datasourceName}"></TextBlock>
                    <TextBox></TextBox>
                </DockPanel>
                <DockPanel>
                    <TextBlock MinWidth="100" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{StaticResource dsms_datasourceComment}"></TextBlock>
                    <TextBox></TextBox>
                </DockPanel>
            </StackPanel>
            <mah:MetroAnimatedTabControl 
                         Grid.Row="1"
                         mah:TabControlHelper.Underlined="TabPanel"
                         VerticalAlignment="Stretch" 
                         HorizontalAlignment="Stretch" 
                         ItemsSource="{Binding SettingsObjects}">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock FontSize="14" FontWeight="Bold" Text="{Binding OptionsDefinitionName}"/>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <customControls:UserDatasouceSettingsControl></customControls:UserDatasouceSettingsControl>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </mah:MetroAnimatedTabControl>
            <DockPanel HorizontalAlignment="Right" Grid.Row="2">
                <Button Content="$apply_name" Style="{StaticResource MetroButtonAccentBorderless}" Margin="0,2,10,2"  Width="120"/>
                <Button Content="$cancel_name" Style="{StaticResource MetroButton}"  Margin="0,2,10,2" Width="120" />
            </DockPanel>
        </Grid>
    </Grid>
</mah:MetroWindow>
