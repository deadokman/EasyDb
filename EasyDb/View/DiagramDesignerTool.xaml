<UserControl x:Class="EasyDb.View.DiagramDesignerTool"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EasyDb.View"
             xmlns:diagramming="clr-namespace:EasyDb.Diagramming"
             xmlns:dbDesigner="clr-namespace:EasyDb.DbDesigner"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ContextMenu x:Key="DesignerCanvasContextMenu">
            <MenuItem Header="Paste" Command="{x:Static ApplicationCommands.Paste}">
                <MenuItem.Icon>
                    <Image Source="Diagramming/Resources/Images/Paste.png" Width="16"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Select All" Command="{x:Static diagramming:DesignerCanvas.SelectAll}"/>
        </ContextMenu>
    </UserControl.Resources>
    <Grid>
        <Border BorderThickness="1" BorderBrush="{DynamicResource AccentColorBrush}" Margin="2">
        <!-- Designer -->
            <dbDesigner:DbDesignerCanvas 
                VerticalAlignment="Stretch" 
                HorizontalAlignment="Stretch">

            </dbDesigner:DbDesignerCanvas>
        </Border>
    </Grid>
</UserControl>
